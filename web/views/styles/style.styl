
@import '_mixins'

$bg_darkBody	= #202020
$bg_body		= #242424
$bg_terminal	= #181818

input
	outline: 0

h1, h2, h3, h4
	margin: 0
	padding: 0
	line-height: 0

h2
	font-size: 15px
	color: #666
	text-shadow: 0 0 1px #000, 0 1px 0 #0f0f0f
	padding: 3px 0 15px
	font-family: arial

h3
	font-size: 13px

a
	text-decoration: none

ul,
li
	margin: 0
	padding: 0

li
	display: block
	padding: 1px 0 0

body
	margin: 10px 20px

	font-size: 14px
	font-family: arial

	color: #cecece

	background-color: $bg_body

.table
	display: table

	> .row
		display: table-row
		
.row > .cell
	display: table-cell

.core
	padding-top: 6px

.logo
	margin: 0
	padding: 8px 0 0 24px
	line-height: 0

	a
		display: inline-block
		padding: 0 2px

		border-bottom: 2px solid #69A956cc

		line-height: 19px
		font-size: 22px
		font-family: arial
		font-style: italic

		text-shadow: 0 1px 4px #000a

		color: #8D8D8D
		text-shadow: 0 2px 0 #000

		opacity: 0.8

		.lower-case
			font-size: 15px
			text-transform: uppercase

		.name-irc
			font-family: tahoma
			font-style: normal

			color: #69A956
			text-shadow: 0 2px 0 #000, 0 0 50px #85DA12cc
		&:hover
			opacity: 1

.terminal-outer
	min-width: 512px

	margin: 10px 0
	margin-top: 35px

	background-color: $terminalColor = $bg_body + 6

	border-radius: 2px
	border-style: solid
	border-width: 6px
	border-color: @background-color

	box-shadow: 0 0 0 1px #4444448c, 0 2px 4px 0px #0f0f0fdd, 0 0px 0px 2px #10101077

	.bot-tabs
		margin-top: -33px
		margin-bottom: 12px

		.tab
			margin-bottom: -3px
			border-bottom: 1px solid #0005

			&:hover
				border-bottom: 1px solid #0005 !important

			&.active, &:active
				padding-top: 4px

				background-color: $terminalColor
				background-image: -moz-linear-gradient( center top , #00000018, transparent 45% )

				border: 1px solid transparent
				border-color: ( @background-color + 17 ) @background-color @background-color

				text-shadow: 0 1px 0 #000000dd, 0 0 1px #000

				box-shadow: 1px 0 0 0 #0003, -1px 0 0 0 #0003, 0 -1px 0 0 #0006, 0 -2px 3px 0 #0002

				&:hover
					border-bottom: 1px solid $terminalColor !important

	.terminal-tabs
		margin-top: -2px

		.right
			float: right

			.tab:last-child
				margin-right: 1px

				&:active,
				&.active
					margin-right: 0px
					margin-left: 3px
	.tab
		padding: 3px 10px
		margin: 0 2px

		&:first-child
			margin-left: 1px
			&:active,
			&.active
				margin-left: 0px
				margin-right: 3px

		display: inline-block

		font-size: 14px
		font-weight: bold

		background-color: @background-color + 11
		background-image: -moz-linear-gradient( center top , #00000018, transparent 45% )

		border: 1px solid transparent
		border-color: ( @background-color + 17 ) @background-color transparent
		border-radius: 2px 2px 0 0
		border-width: 1px 1px 0

		color: #030303

		text-shadow: 0 1px 0 #4c4c4cdd, 0 0 1px #7779

		box-shadow: 1px 0 0 0 #0003, -1px 0 0 0 #0003, 0 -1px 0 0 #0006, 0 -2px 3px 0 #0002
		cursor: default

		small
			text-shadow: 0 1px 0 #4c4c4ccc, 0 0 1px #7775

		&:hover:not(.active):not(:active)
			background-color: #36402B

			border-color: ( @background-color + 16 ) ( @background-color + 3) transparent

			text-shadow: 0 1px 0 ( @background-color + 30 ), 0 0 1px ( @background-color + 24 )

			cursor: pointer

		&.active,
		&:active
			position: relative
			top: 1px

			padding-top: 3px

			background-color: $bg_terminal
			background-image: none

			border: 1px solid #050505
			border-width: 2px 1px 0px
			border-color: #050505 #050505 $bg_terminal

			color: #bbb

			box-shadow: 0 -1px 0 0 #333c

			&, small
				text-shadow: 0

.tab-content, .bot-content
	display: none

	&.active
		display: block

.tab-content
	width: 100%

	a
		color: #8FA1AB

		&:hover
			color: #7DCC7E

	&.active
		display: table

	.cell
		padding: 1px 5px 1px 8px
		border-right: 2px solid #202020

		&:last-child
			border-right: 0

	.col2,
	.col1
		width: 1px
		white-space: nowrap

	.col2
		color: #6f6f6f

		&.lirc
			color: #89C597

		&.chanmsg
			color: #ADAD71
		
		&.botnet
			color: #85AB52

		&.notice
			color: #A06E62

		&.send
			color: #6F87B3

		&.usermsg
			color: #63AE99

.terminal
	border: 1px solid #090909
	border-radius: 0 0 2px 2px

	background-color: $bg_terminal

	box-shadow: 0 1px 0 0 #7773

	font-size: 12px
	font-family: "lucida console", monospace

	::-moz-selection
		background: #86C14A40
		color: #eee

	::selection
		background: #86C14A40
		color: #eee

	.content
		height: 500px

		margin-top: 3px

		padding: 4px 8px 5px

		color: #999

		transition: color 0.2s ease

		overflow: hidden
		width: 100%

		word-break: break-all

	.input
		border-top: 1px dotted #2a2a2a
		margin: 4px 8px 0
		padding: 7px 0 6px

		input,
		.caret
			display: inline-block

		input
			width: 95%

			background-color: transparent
			border: 0

			font: inherit
			
			color: #aaa

			&:focus
				color: #ccc

		.caret
			margin-right: 5px

			color: #446F88
			text-shadow: 0 0 8px #2886BDcc, 0 1px 0px #0006

			opacity: 0.5

			&.active
				opacity: 1

.commands
	width: 100%

	.cell
		width: 33%
		border-right: 2px solid #333
		padding: 0 14px

		&:last-child
			border-right: 0

.footer
	margin-top: 16px
	margin-bottom: 20px
	padding: 14px 0px
	margin-left: 10px
	margin-right: 10px

	min-height: 80px

	background-color: $bg_body - 5

	border-top: 1px solid #1114
	border-bottom: 1px solid #1113
	border-radius: 8px

	color: #666
	font-family: monospace
	font-weight: bold
	text-shadow: 0 1px 0 #0a0a0a

	h2
		padding-left: 15px

// Scrollbar

.mCSB_container
	padding-right: 24px

.mCSB_scrollTools
	margin-top: 3px
	width: 18px
	height: 100%
	top: 0
	right: 0

.mCSB_draggerContainer
	height: 100%
	margin-left: -9px

.mCSB_draggerRail
	width: 0px
	height: 100%
	margin: 0 auto

	border-left: 1px dotted #080808
	border-right: 1px dotted #1f1f1f
	border-radius: 10px

.mCSB_dragger
	cursor: pointer
	width: 100%

	&:hover, &.ui-draggable-dragging
		.mCSB_dragger_bar
			background-color: #36402D

.mCSB_dragger_bar
	width: 5px
	height: 98%
	margin: 1px auto

	background-color: #333

	border-radius: 10px

	box-shadow: 0 0 0 1px #0005

