<!DOCTYPE html>
<html>
	<head>
		<link media="screen" type="text/css" href="<<= @site.url.static >>/style.css" rel="stylesheet" />
		<title>Lirc</title>
		<script src="<<= @site.url.static >>/app.js"></script>
	</head>
	<body>
		<div class="core">
			<div class="terminal-outer">
				<div class="bot-tabs">
					<div class="tab active">Bot</div>
				</div>
				<div class="bot-content active">
					<div class="terminal-tabs">
						<div class="tab active" name="all">All</div>
						<div class="tab" name="irc">IRC</div>
						<div class="tab" name="irc_raw">IRC <small>Raw</small></div>
						<div class="tab" name="botnet">Botnet</div>
						<div class="tab" name="lirc">Lirc</div>

						<div class="right">
							<div class="tab" name="client">~</div>
						</div>
					</div>
					<div class="terminal">
						<div class="content">
							<div class="table tab-content active" name="all"></div>
							<div class="table tab-content" name="irc"></div>
							<div class="table tab-content" name="irc_raw"></div>
							<div class="table tab-content" name="botnet"></div>
							<div class="table tab-content" name="lirc"></div>
						</div>
						<div class="input">
							<span class="caret">&gt;&gt;</span><input name="terminal-input" value=""/>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="footer-bar">
			<h1 class="logo button"><a href="<<= @site.url.root >>">L<span class="name-irc">irc</span></a></h1>
			<a href="#" class="getErrors button">Error Logs</a>
		</div>
		<div class="footer">
			<h2>Commands</h2>
			<div class="table commands">
				<div class="row">
					<div class="cell">
						<ul>
							<li>.join [#channel,...] ?[key,...]?</li>
							<li>.part [#channel,...]</li>
							<li>.privmsg [#channel|nickname] [text]</li>
						</ul>
					</div>
					<div class="cell">
						<ul>
							<li>.buffer</li>
						</ul>
					</div>
					<div class="cell">
						<ul>
							<li>.kill [botName]</li>
							<li>.spawn [botName]</li>
							<li>.restart [botName]</li>
							<li>.restartall</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
		<div class="popupBox">
			<div class="close">x</div>
			<div class="head">~</div>
			<div class="body">...</div>
		</div>
	</body>
</html>