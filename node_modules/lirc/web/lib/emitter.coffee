
events = require 'events'

web = require './web'

module.exports	=
web.emitter		= new events.EventEmitter()

web.on			= () -> web.emitter.on.apply web.emitter, arguments

web.emit		= (name, arg = '') ->
	if name isnt '*'
		arguments.callee '*', [name, arg]

	web.emitter.emit name, arg

web.emitter._events = {}
