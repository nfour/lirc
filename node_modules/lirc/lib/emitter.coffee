
events = require 'events'

lirc = require './lirc'

module.exports	=
lirc.emitter	= new events.EventEmitter()

lirc.on			= () -> lirc.emitter.on.apply lirc.emitter, arguments

lirc.emit		= (name, arg = '') ->
	if name isnt '*'
		arguments.callee '*', [name, arg]

	lirc.emitter.emit name, arg

lirc.emitter._events = {}

